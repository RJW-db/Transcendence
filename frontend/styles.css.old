




html, body {
    height: 100vh;
    margin: 0;
    padding: 0;
    background-color: black;
	color: white; /* Set a default text color */
    font-family: sans-serif; /* A sensible default font */
}


body {
	display: flex;
	flex-direction: column;

}
.game-header{
	padding: .0/5% 0;
	background-color:cadetblue;
}

h1 {
	display: flex;
	margin-top: 0;
	height: 300px;
	align-items: center;
	justify-content: center;
	color: #333;
	font-size: 45px;
	background-color: aquamarine;
}

.buttons {
	display: grid; /* <-- CHANGE to grid */
	grid-template-columns: 1fr auto 1fr; /* <-- The magic line! */
	align-items: center;
	height: 200px;
	padding: 0 3%;
}

.playingButton {
    padding: 0 20px;
}
.tournament{
	justify-self: start;
}

.registeringButtons{
	justify-self: end;
}
.playingButton, .registeringButtons, .tournament{

	display: flex;
	flex-direction: column;
	align-items: center;

	/* flex-basis: 200px; Adjust this fixed width as needed */
}


.centerbtn {
	font-size: 160%;
	margin-bottom: 10px;
	background-color: aquamarine;
}

.leftsidebtn, .rightsidebtn{
	font-size: 100%;
	margin-bottom: 5px;
	background-color: aquamarine;
}
#tournament-players-error{

	color:  #d93025;
	font-size: 100%;
}

.game-view-container {
    display: flex;
    flex-direction: column;
    justify-content: center; /* Center vertically */
    align-items: center;     /* Center horizontally */
    width: 100%;
    flex-grow: 1; /* Allow this container to take up the main space */
    padding: 1rem; /* Add some spacing from the screen edges */
    box-sizing: border-box;
}

.game-aria {
    width: 100%;
    max-width: 800px;
	min-width: 400px;
    aspect-ratio: 4 / 3;
	border-top: 8px solid white;
    border-bottom: 8px solid white;
	border-left: 8px solid white;
    border-right: 8px solid white;
	box-sizing: border-box;
    position: relative;
}



.gamePageH {
	display: flex;
	background-color: #007bff;
	justify-content: space-between;
	font-size: larger;
	width: 100%;
    max-width: 1200px;
    margin-bottom: 10px;
    box-sizing: border-box;
	
}
.gamePageHeaderBtn {
	background-color: aqua;
	padding-inline: 20px;
	font-size: larger;
}

