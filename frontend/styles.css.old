.ball {
	width: 20px;
	/* padding-top: 0%; */
	/* height: 2.5%; */
	aspect-ratio: 1/1;
    border-radius: 50%;
    background-color: white;
    position: absolute;
	transform: translate(-50%, -50%);
	/* top: 50%; */
	/* left: 50%; */
	/* transform: translateX(-50%); */
}



.side-line{
	width: 10px;
    height: 100px;
    background-color: white;
    position: absolute;

}
#left-paddle {
	left: 50px;
	/* top: 50%; */
}
#right-paddle {
	right: 50px;
	/* top: 50%; */
}


.score{

	color: white;
    font-size: 48px;
    font-family: 'Courier New', Courier, monospace;
    font-weight: bold;
	position: absolute; 
	top: 1%;
	transform: translateX(-50%);
}

#left-score {
    left: 25%; 
}
#right-score {
    left: 75%; 
}



.vertical-dash-line {
	position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 5px;        
    height: 100%;        
    background: repeating-linear-gradient(
        to bottom,        
        white,             
        white 10px,        
        transparent 10px,   
        transparent 20px   
    );      
}


.winner-message-style {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent background */
    color: #00ff00; /* Bright green text */
    font-size: 3rem; /* Large font size */
    font-weight: bold;
    padding: 20px 40px;
    border-radius: 10px;
    text-align: center;
    z-index: 10; /* Ensures it appears above other game elements */
}

.back-button {
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 1rem;
    cursor: pointer;
}



#modal-overlay {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.7);

	display: flex;
	justify-content: center;
	align-items: center;

	visibility: hidden;
	opacity: 0;
	transition: opacity 0.3s ease, visibility 0.3s ease;
}

#modal-overlay.active {
	visibility: visible;
	opacity: 1;
}

.modal-content {
	background-color: white;
	color: black;
	padding: 2rem;
	border-radius: 8px;
	width: 90%;
	max-width: 400px;
	position: relative;
	box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.close-btn {
	position: absolute;
	top: 10px;
	right: 15px;
	background: none;
	border: none;
	font-size: 2rem;
	color: #333;
	cursor: pointer;
}

.form-group {
	margin-bottom: 1rem;
	display: flex;
	flex-direction: column;
}

.form-group label {
	margin-bottom: 5px;
	font-weight: bold;
}

.form-group input {
	padding: 10px;
	border: 1px solid #ccc;
	border-radius: 4px;
	font-size: 1rem;
}

.error-message {
    color: #d93025;
    font-size: 0.9rem;
    margin-top: 5px;
    /* Hide it by default */
    display: none;
}

#modal-submit-btn {
	width: 100%;
	padding: 12px;
	border: none;
	border-radius: 4px;
	background-color: #007bff;
	color: white;
	font-size: 1rem;
	cursor: pointer;
	margin-top: 1rem;
}


#modal-addPlayer-id {
    /* Let the browser center the dialog. Remove position, top, left, etc. */
    /* Add a border or remove it, as the browser might add one by default. */
    border: none;
    border-radius: 8px;
    padding: 0; /* We'll pad the inner div instead */
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    max-width: 400px;
    width: 90%;
}

/* This is the magic part: style the native backdrop! */
#modal-addPlayer-id::backdrop {
    background-color: rgba(0, 0, 0, 0.7);
}

/* Now, style our new inner div. This holds the white background and padding. */
.modal-addPlayer-content {
	background-color: white;
	color: black;
	padding: 2rem;
    position: relative; /* So we can position the close button inside it */
}

/* The rest of the inner styles are mostly okay */
.close-addPlayer-btn {
	position: absolute;
	top: 10px;
	right: 15px;
	background: none;
	border: none;
	font-size: 2rem;
	color: #333;
	cursor: pointer;
}





.form-group-addPlayer {
	margin-bottom: 1rem;
	display: flex;
	flex-direction: column;
}

.form-group-addPlayer label {
	margin-bottom: 5px;
	font-weight: bold;
}

.form-group-addPlayer input {
	padding: 10px;
	border: 1px solid #ccc;
	border-radius: 4px;
	font-size: 1rem;
}

#modal-submit-addPlayer-btn {
	width: 100%;
	padding: 12px;
	border: none;
	border-radius: 4px;
	background-color: #007bff;
	color: white;
	font-size: 1rem;
	cursor: pointer;
	margin-top: 1rem;
}

.game-type-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    flex-grow: 1;
    padding: 1rem;
    box-sizing: border-box;
    text-align: center;
}

.game-type-buttons {
    margin-top: 2rem;
    display: flex;
    gap: 1rem; /* Adds space between the buttons */
}

.game-type-btn {
    padding: 15px 30px;
    font-size: 1.2rem;
    cursor: pointer;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.game-type-btn:hover {
    background-color: #0056b3;
}

.waiting-message {
    margin-top: 2rem;
    font-size: 1.5rem;
}

.spinner {
    border: 8px solid rgba(255, 255, 255, 0.3);
    border-top: 8px solid white;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    animation: spin 1s linear infinite;
    margin: 20px auto;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}



